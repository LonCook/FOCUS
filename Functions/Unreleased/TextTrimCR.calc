Let ( [
	_delimiter = "::‡::"
	] ;
	Substitute (
		Trim (
			Substitute ( text ;
				[ " " ; _delimiter ] ;
				[ ¶ ; " " ]
			)
		) ;
		[ " " ; ¶ ] ;
		[ _delimiter ; " " ]
	)
)

/* —————————————————————————————— //
NAME:
	TextTrimCR ( text )
	
PURPOSE:
	Trims leading and trailing carriage returns from text
	
